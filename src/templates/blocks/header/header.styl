.header
  height 90px
  box-shadow 0 10px 40px rgba(8, 32, 59, 0.13)
  background-color #ffffff
  display flex
  align-items center

  .container
    display flex
    align-items center
    width 100%

  &__main
    display flex
    align-items center
    flex-shrink 0

  &__content
    display flex
    align-items center
    flex-grow 1
    margin-left 52px

  .collapse
    display none

  +below(lg-breakpoint)
    a
      font-size 14px

    .container
      max-width 970px

    &__content
      margin-left 20px

  +below(md-breakpoint)
    height 60px
    position relative

    .collapse
      display block

    .container
      max-width 750px
      position static

    &__main
      width 100%
      justify-content space-between
      align-items center

    &__content
      background rgba(255,255,255, .9)
      width 100%
      position absolute
      top 100%
      left 0
      width 100%
      margin-left 0
      z-index 2
      max-height 0
      height 0
      transition all .3s
      overflow hidden

      &.isOpen
        max-height 300px
        height auto

      .navbar
        max-width 750px
        padding 0 20px
        margin 0 auto

.logo
  display flex

  img
    width 175px
    height 42px
    display flex

    +below(lg-breakpoint)
      height 30px
      width auto

.navbar
  display flex
  align-items center
  justify-content space-between
  width 100%

  &__right
    margin-left 20px

  +below(md-breakpoint)
    flex-direction column

    &__right
      margin-left 0
      width 100%
      padding-bottom 10px

    &__left
      width 100%

.list-menu
  display flex
  align-items center

  &__item
    & + &
      margin-left 20px

  &__link
    font-family font-family-reg
    font-size 16px
    color #000
    line-height 19px

    &:hover
      color #2A8CFF

  +below(md-breakpoint)
    flex-direction column
    width 100%

    &__item
      width 100%
      position relative
      text-align left
      min-height 44px
      display flex
      align-items center

      &:before
        position absolute
        content ''
        top 100%
        width 100%
        height 1px
        background #dadada

      & + &
        margin-left 0

      &--btn
        padding 10px 0
        &:before
          display none

    .btn
      width 100%
      height 36px
      min-height 36px

.btn
  cursor pointer
  font-family font-family-reg
  min-height 41px
  border-radius 3px
  border 1px solid bgBlue
  background-color bgBlue
  color #ffffff
  display flex
  align-items center
  justify-content center
  text-transform uppercase
  outline none
  transition all .2s

  &--sm
    min-width 120px
    padding 7px 20px

    span
      margin-top 3px
      line-height 20px
      font-size 13px

  &--lg
    padding 12px 20px 7px
    min-height 45px

    span
      font-size 16px
      line-height 32px

  &:hover
    color #fff
    background #2a58ff

.link-icon
  font-family font-family-reg
  font-size 16px
  color #000
  line-height 19px
  display flex
  align-items flex-start
  text-transform capitalize

  .icon
    width 17px
    height 17px
    fill #9ebde1
    display flex
    margin-right 6px

  &:hover
    .icon
      fill #2A8CFF

    color #2A8CFF

.collapse
  cursor pointer

  &__line
    background #aaaaaa
    display block
    width 30px
    height 4px
    border-radius 0px

    & + &
      margin-top 4px
