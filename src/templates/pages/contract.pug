extends ../layouts/main

block content

  +b.page--main
    +e.row
      +b.contract
        .container
          +e.title contact us
          +e.subtitle Send us your doubts
          +e.form
            +b.FORM.form
              +e.row
                .select
                  select
                    option(value="test1") test1
                    option(value="test2") test2
                    option(value="test3") test3
                    option(value="test4") test4

              +e.row--between
                +e.item
                  input(type="text" placeholder="Name").input-main
                +e.item
                  input(type="text" placeholder="Last name").input-main

              +e.row--between
                +e.item
                  input(type="text" placeholder="E-mail").input-main
                +e.item
                  input(type="text" placeholder="Phone").input-main

              +e.row
                textarea(placeholder="Message").textarea-main

              +e.row--checkbox
                +b.checkbox
                  +e.INPUT(type="checkbox" id="accept").input
                  +e.LABEL(for="accept").label I accept the Data and Privacy Policy

              +e.row--btn
                +b.BUTTON.btn--lg
                  span send message
