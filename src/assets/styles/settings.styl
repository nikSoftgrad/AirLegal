@import 'variables'
@import 'mixins'

html
  box-sizing border-box

*,
*before,
*after
  box-sizing inherit

disabled, [disabled], [aria-disabled="true"]
  cursor not-allowed

.clearfix:after
    content ""
    display block
    clear both

a
  -webkit-text-decoration-skip ink
  text-decoration-skip ink

.visuallyhidden:not(:focus):not(:active)
  position absolute
  width 1px
  height 1px
  margin -1px
  border 0
  padding 0
  clip-path inset(100%)
  clip rect(0 0 0 0)
  overflow hidden

.svg-sprite
  display none

body
  display flex
  min-height 100vh
  flex-direction column
  font-weight 300
  overflow-x hidden
  color accentColor

  &.fixed
    overflow-y hidden!important
    width 100%

.main-content
  flex-shrink 0
  display flex
  flex-direction column
  flex-grow 1
  height 100%

.footer
	flex-shrink 0

.page
  flex-grow 1

  &__row
    & + &--mt-md
      margin-top 35px

  &--help
    margin-bottom 70px

.header
  flex-shrink 0
  position sticky
  z-index 10

h1,h2,h3,h4,h5,h6,.h1,.h2,.h3,.h4,.h5,.h6
  margin 0 0 15px
  font-weight 400
  letter-spacing 0px
  word-spacing 0px
  line-height normal
  &:last-child
    margin-bottom 0

.lh-0
  line-height 0

a
  text-decoration none
  transition all 0.3s
  &:hover
    text-decoration none
    color #000

.visible-mobile
  display none

  +below(540px)
    display block

.hidden-md
  +below(lg-breakpoint)
    display none
