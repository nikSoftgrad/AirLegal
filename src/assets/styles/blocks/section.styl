.section
  &--work
    padding 70px 0
    background #fff

    +below(xs-breakpoint)
      padding 30px 0

  &--options
    padding 65px 0 60px
    background #fff

    +below(xs-breakpoint)
      padding 30px 0

  &--faq
    padding 70px 0
    background #f4f7fb

  &--price
    padding 70px 0 80px
    background #fff

  &--gray
    background #f4f7fb

  &--claim
    padding 50px 0

    & ^[0]__title
      text-align left
      font-size 25px
      line-height 32px

    & ^[0]__list
      margin-top 35px

  &__title
    font-family font-family-Xbold
    font-size 32px
    line-height 32px
    text-transform uppercase
    text-align center
    width 100%

    +below(xs-breakpoint)
      font-size 24px
      line-height 1.2

  &__row
    &--airing
      margin-top 75px

    &--claim
      margin-top 65px

    &--options
      margin-top 50px
      padding 0 30px

.list-airing
  display flex
  margin-left -30px

  &__item
    flex-basis 360px
    margin-left 30px

  &--four
    padding 10px 0 0

    & ^[0]__item
      flex-basis 263px

  +below(sm-breakpoint)
    margin-left 0
    width 100%
    flex-direction column
    align-items center
    justify-content center

    &__item
      flex-basis auto
      max-width 360px
      width 100%
      margin-left 0
      margin-bottom 60px

      &:last-child
        margin-bottom 0

.list-options
  display flex
  justify-content space-between

  &__item
    width 203px

  +below(md-breakpoint)
    justify-content center
    flex-wrap wrap
    width 100%

    &__item
      flex-basis 300px
      flex-grow 1
      padding 20px


.claim-user
  margin-left -30px
  margin-top -30px
  display flex
  flex-wrap wrap

  &__item
    flex-basis 360px
    min-width 360px
    margin 30px 0 0 30px

.option
  display flex
  align-items center
  justify-content center
  flex-direction column

  &__icon
    display flex
    align-items center
    justify-content center
    width 120px
    height 120px
    background-color #eff3f9
    border-radius 50%

    img
      width 62px
      height 62px
      display block

  &__text
    margin-top 30px
    font-family font-family-reg
    font-size 18px
    line-height 26px
    text-align center
    width 100%

.card-airing
  position relative
  width 100%

  &__number
    width 70px
    height 70px
    display flex
    align-items center
    justify-content center
    background-color #eff3f9
    color #9ebde1
    font-size 32px
    line-height 24px
    position absolute
    top -35px
    left 50%
    transform translateX(-50%)
    border-radius 50%
    z-index 3
    font-family font-family-Xbold
    box-shadow 0 8px 14px rgba(8,32,59,0.2)

    &--flight
      transform translateX(-50%) rotate(45deg)

      .icon
        fill #9ebde1
        width 26px
        height 29px

  &__content
    position relative
    background #fff
    box-shadow 0 10px 40px rgba(8, 32, 59, 0.08)
    min-height 140px
    padding 65px 10px 10px
    text-align center
    font-size 20px
    line-height 26px
    font-family font-family-reg

  &:before
    left 15px
    width calc(100% - 30px)
    height 50px
    position absolute
    content ''
    bottom -10px
    box-shadow 0 10px 40px rgba(8, 32, 59, 0.08)

  &--sm
    & ^[0]__content
      font-size 18px

.list-claim
  display flex
  justify-content space-between

  &__item
    width calc(50% - 5px)

  &--sm
    margin-left -30px
    justify-content center
    & ^[0]__item
      flex-basis 360px
      width auto
      margin-left 30px

  +below(sm-breakpoint)
    width 100%
    flex-direction column
    align-items center
    justify-content center

    &__item
      max-width 360px
      width 100%
      margin-bottom 20px

      &:last-child
        margin-bottom 0

.card-claim
  position relative
  padding 35px 60px
  font-family font-family-reg
  font-size 20px
  line-height 1.2
  min-height 308px
  height 100%

  .accent
    color #2a8cff

  &__title
    font-family font-family-Xbold
    font-size 26px
    text-transform uppercase
    padding 10px 0
    position relative

  &:before
    content ''
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color #9ebde1
    opacity 0.15

  &__item
    display flex
    align-items center

    .plus
      margin-right 5px
      color #2a8cff

    & + &
      margin-top 15px

    &--sm
      max-width 310px
      margin-top 10px

    &--sm + &--sm
      margin-top 8px

  &__content
    margin-top 15px
    position relative

    &--sm
      margin-top 3px
      max-width 400px

      .card-claim__description
        margin-bottom 20px

  &__action
    margin-top 30px
    display flex
    align-items center
    position relative

  &__link
    text-transform uppercase
    font-size 15px
    text-decoration underline
    cursor pointer
    transition all .2s

    &:hover
      text-decoration none

  &__description
    font-size 18px
    line-height 24px

    & + &
      margin-top 10px

  &__btn
    margin-left 55px

  &--first
    background-image url('../images/claim-1.png')
    background-size cover
    background-position center
    background-repeat no-repeat

  &--second
    background-image url('../images/claim-2.png')
    background-size cover
    background-position center
    background-repeat no-repeat

  &--one
    background-image url('../images/claim-3.png')
    background-size cover
    background-position center
    background-repeat no-repeat

  &--two
    background-image url('../images/claim-3.png')
    background-size cover
    background-position center
    background-repeat no-repeat

  &--three
    background-image url('../images/claim-3.png')
    background-size cover
    background-position center
    background-repeat no-repeat

  &--sm
    padding 20px 30px
    min-height 267px

    & ^[0]__title
      font-size 32px

    & ^[0]__content
      margin-top 5px

    & ^[0]__description
      font-size 20px
      line-height 25px

  &--xs
    padding 20px 30px
    min-height 267px

    & ^[0]__title
      font-size 20px

    & ^[0]__content
      margin-top 5px

    & ^[0]__description
      font-size 18px
      line-height 20px

  +below(lg-breakpoint)
    padding 20px
    font-size 16px

    &__description
      font-size 16px

    &__title
      font-size 20px

    &__action
      flex-direction column
      align-items center

    &__btn
      margin-top 10px
      margin-left 0

    .li-dot
      font-size 16px

.list-steps
  display flex
  justify-content space-around
  padding 35px 0

  &__item
    padding 20px
    width 33.3%
    display flex
    justify-content center

.step
  display flex
  flex-direction column
  align-items center

  &__icon
    width 120px
    height 120px
    display flex
    align-items center
    justify-content center
    background-color #eff3f9
    margin-bottom 25px
    border-radius 50%

  &__text
    font-family font-family-bold
    font-size 20px
    line-height 1.2

    span
      font-family font-family-Xbold

.li-dot
  width 100%
  display flex
  align-items flex-end
  justify-content space-between
  font-size 18px
  font-family font-family-reg
  line-height 24px

  &__left
    flex-shrink 0

  &__right
    flex-shrink 0
    color #2a8cff
    font-family font-family-Xbold

  &__middle
    flex-grow 1
    border-bottom 1px dotted #c1c3c6
    margin 0 5px 7px

.faq
  display flex
  justify-content space-between

  &__title
    font-family font-family-Xbold
    font-size 32px
    line-height 32px

    & + .faq__subtitle
      margin-top 20px

  &__subtitle
    font-family font-family-reg
    font-size 22px
    line-height 30px

  &__description
    font-family font-family-reg
    font-size 17px
    line-height 26px

  &__row
    width 100%

    & + &
      margin-top 25px

    & + &--btn
      margin-top 30px

    &--btn
      display flex

  &__left
    width 50%
    padding-right 105px
    display flex
    align-items flex-start
    flex-direction column

  &__right
    width 50%
    display flex

  &__img
    display flex
    justify-content flex-end
    align-items flex-start
    width 100%

    img
      display flex
      max-width 100%

.complete-block
  display flex
  justify-content space-between
  padding-top 78px
  padding 78px 130px 0

  &__left
    padding-left 10px
    max-width 310px

  &__img
    display flex

    img
      display flex

  &__right
    max-width 465px
    margin-left 20px
    padding-top 42px
    display flex
    flex-direction column
    align-items flex-start
    width 100%

  &__title
    font-family font-family-Xbold
    font-size 32px
    line-height 24px
    text-transform uppercase
    width 100%

  &__description
    font-family font-family-reg
    font-size 20px
    line-height 30px
    margin-top 25px
    width 100%

  &__btn-wrap
    margin-top 30px

.claim-card
  box-shadow 0 10px 30px rgba(8, 32, 59, 0.13)
  padding 35px 30px 30px

  &__title
    font-family font-family-reg
    font-size 22px
    line-height 26px

  &__content
    margin-top 10px

  &__item
    display flex
    align-items center
    font-family font-family-reg
    font-size 15px
    line-height 26px

    &:nth-child(odd)
      background #eff3f9

    &:nth-child(even)
      background #fff

  &__left,&__right
    padding 0 12px

  &__left
    width 43%

  &__right
    width 57%

  &__btn-wrap
    margin-top 20px

.list-ul
  &__title
    font-family font-family-reg
    font-size 20px

  ul
    margin 0
    font-family font-family-reg
    font-size 16px
    padding 5px 0

    li
      line-height 1.4
      padding 0 5px 0 0

      &:before
        content '-'
        display inline-block
        margin-right 2px

      & + &
        margin-top 3px
