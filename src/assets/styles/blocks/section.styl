.section
  &--work
    padding 70px 0
    background #fff

  &--options
    padding 65px 0 60px
    background #fff

  &--faq
    padding 70px 0
    background #f4f7fb

  &--price
    padding 70px 0 80px
    background #fff

  &--gray
    background #f4f7fb

  &__title
    font-family font-family-Xbold
    font-size 32px
    line-height 32px
    text-transform uppercase
    text-align center
    width 100%

  &__row
    &--airing
      margin-top 75px

    &--claim
      margin-top 65px

    &--options
      margin-top 50px
      padding 0 30px

.list-airing
  display flex
  margin-left -30px

  &__item
    flex-basis 360px
    margin-left 30px

.list-options
  display flex
  justify-content space-between

  &__item
    width 203px

.option
  display flex
  align-items center
  justify-content center
  flex-direction column
  color #212121

  &__icon
    display flex
    align-items center
    justify-content center
    width 120px
    height 120px
    background-color #eff3f9
    border-radius 50%

    img
      width 62px
      height 62px
      display block

  &__text
    margin-top 30px
    font-family font-family-reg
    font-size 18px
    line-height 26px
    text-align center

.card-airing
  position relative
  width 100%

  &__number
    width 70px
    height 70px
    display flex
    align-items center
    justify-content center
    background-color #eff3f9
    color #9ebde1
    font-size 32px
    line-height 24px
    position absolute
    top -35px
    left 50%
    transform translateX(-50%)
    border-radius 50%
    z-index 3
    font-family font-family-Xbold
    box-shadow 0 8px 14px rgba(8,32,59,0.2)

  &__content
    position relative
    background #fff
    box-shadow 0 10px 40px rgba(8, 32, 59, 0.08)
    min-height 140px
    padding-top 65px
    text-align center
    color #212121
    font-size 20px
    line-height 26px
    font-family font-family-reg

  &:before
    left 15px
    width calc(100% - 30px)
    height 50px
    position absolute
    content ''
    bottom -10px
    box-shadow 0 10px 40px rgba(8, 32, 59, 0.08)

.list-claim
  display flex
  justify-content space-between

  &__item
    width calc(50% - 5px)

.card-claim
  position relative
  padding 35px 60px
  font-family font-family-reg
  font-size 20px
  line-height 1.2
  color #212121
  min-height 308px

  &__title
    font-family font-family-Xbold
    font-size 26px
    text-transform uppercase
    padding 10px 0
    position relative

  &:before
    content ''
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color #9ebde1
    opacity 0.15

  &__item
    display flex
    align-items center

    .plus
      margin-right 5px
      color #2a8cff

    & + &
      margin-top 15px

    &--sm
      max-width 310px
      margin-top 10px

    &--sm + &--sm
      margin-top 8px

  &__content
    margin-top 15px
    position relative

    &--sm
      margin-top 3px
      max-width 400px

      .card-claim__description
        margin-bottom 20px

  &__action
    margin-top 30px
    display flex
    align-items center
    position relative

  &__link
    text-transform uppercase
    font-size 15px
    text-decoration underline
    cursor pointer
    transition all .2s

    &:hover
      text-decoration none

  &__description
    font-size 18px
    line-height 24px

  &__btn
    margin-left 55px

  &--first
    background-image url('../images/claim-1.png')
    background-size cover
    background-position center
    background-repeat no-repeat

  &--second
    background-image url('../images/claim-2.png')
    background-size cover
    background-position center
    background-repeat no-repeat

.li-dot
  width 100%
  display flex
  align-items flex-end
  justify-content space-between
  font-size 18px
  font-family font-family-reg
  line-height 24px

  &__left
    flex-shrink 0

  &__right
    flex-shrink 0
    color #2a8cff
    font-family font-family-Xbold

  &__middle
    flex-grow 1
    border-bottom 1px dotted #c1c3c6
    margin 0 5px 7px

.faq
  display flex
  justify-content space-between
  color #212121

  &__title
    font-family font-family-Xbold
    font-size 32px
    line-height 24px

    & + .faq__subtitle
      margin-top 20px

  &__subtitle
    font-family font-family-reg
    font-size 22px
    line-height 30px

  &__description
    font-family font-family-reg
    font-size 17px
    line-height 26px

  &__row
    & + &
      margin-top 25px

    & + &--btn
      margin-top 30px

  &__left
    width 50%
    padding-right 105px

  &__right
    width 50%
    display flex

  &__img
    display flex
    justify-content flex-end
    width 100%

    img
      display flex
      max-width 100%

.complete-block
  display flex
  justify-content space-between
  color #212121
  padding-top 78px
  padding 78px 130px 0

  &__left
    padding-left 10px
    max-width 310px

  &__img
    display flex

    img
      display flex

  &__right
    max-width 465px
    margin-left 20px
    padding-top 42px

  &__title
    font-family font-family-Xbold
    font-size 32px
    line-height 24px
    text-transform uppercase

  &__description
    font-family font-family-reg
    font-size 20px
    line-height 30px
    margin-top 25px

  &__btn-wrap
    margin-top 30px



