.hero
  background-image url('../images/bg-hero-1.png')
  background-size cover
  background-position center
  padding 88px 0 58px

  .container
    display flex
    flex-direction column
    align-items flex-end
    width 100%

  &__input-wrap
    margin-top 75px

  &__content
    width calc(50% + 80px)
    text-align left

  &__title
    display flex
    flex-direction column
    align-items flex-start

    .custom-title + .custom-title
      margin-left 45px
      margin-top -5px

    & + .hero__description
      margin-top 45px

  &__description
    font-size 24px
    font-family font-family-reg
    line-height 1.2
    color #212121

    span
      font-family font-family-Xbold

    & + &
      margin-top 5px

.input-block
  width 100%
  display flex
  align-items center
  background #fff
  box-shadow 0 10px 40px rgba(8, 32, 59, 0.13)
  padding 20px 35px

  &__item
    min-width 170px

    & + &
      margin-left 10px

    &--btn
      .btn
        width 100%
        height 100%

.input-icon
  display block
  position relative

  &__icon
    position absolute
    top 50%
    left 15px
    height 18px
    transform translateY(-50%)
    img
      height 100%
      display flex

    &--flight
      .icon
        position relative
        transform rotate(45deg)
        fill #9ebde1
        height 18px
        width 17px

    &--earth
      .icon
        fill #9ebde1
        height 18px
        width 18px

    &--place
      .icon
        fill #9ebde1
        height 18px
        width 15px

  input
    width 100%
    border-radius 3px
    background-color #f5f7fa
    border 1px solid #d2d6dc
    height 45px
    placeholder-color(#818387)
    font-size 14px
    line-height 17px
    padding 10px 10px 10px 43px

.custom-title
  font-family font-family-Xbold
  color #fff
  position relative
  display flex

  span
    text-transform uppercase
    font-size 46px
    line-height 56px
    padding 5px 17px 0
    position relative

  &--light
    &:before
      content ''
      position absolute
      width 100%
      height 100%
      background #9ebde1
      border-radius 10px
      transform skew(-15deg)

  &--dark
    &:before
      content ''
      position absolute
      width 100%
      height 100%
      background #2a8cff
      border-radius 10px
      transform skew(-15deg)
